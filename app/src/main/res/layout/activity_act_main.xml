<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edit_zoeiro"
    android:backgroundTint="#99000000"
    android:backgroundTintMode="src_over"
    tools:context="com.example.renan.appmemes.ActMain">

    <ImageButton
        android:id="@+id/btnImitacoes"
        android:layout_width="172dp"
        android:layout_height="158dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/felipe_editada"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.501" />

    <ImageButton
        android:id="@+id/btnRages"
        android:layout_width="172dp"
        android:layout_height="158dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/teste"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.498"
        app:layout_constraintRight_toLeftOf="@+id/btnImitacoes"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:id="@+id/text_rage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="Rages"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/btnRages"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnRages"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnRages" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="Imitações"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/btnImitacoes"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/btnImitacoes"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/btnImitacoes" />

</android.support.constraint.ConstraintLayout>
